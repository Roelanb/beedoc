{
  "name": "beedoc",
  "version": "0.1.1",
  "description": "A WYSIWYG markdown editor with D3.js rendering",
  "main": "src/index.html",
  "scripts": {
    "dev": "node server.js",
    "dev:old": "cd src && live-server --port=8080 --entry-file=index.html",
    "build": "npm run build:web",
    "build:web": "rm -rf dist && mkdir -p dist && cp -r src/. dist/",
    "prebuild:linux": "npm run build:web",
    "build:linux": "pake dist/index.html --name BeeDoc --version 0.1.1 --icon assets/icon.png --width 1200 --height 800",
    "serve:dist": "cd dist && python3 -m http.server 8081",
    "prebuild:windows": "npm run build:web",
    "build:windows": "pake dist/index.html --name BeeDoc --version 0.1.1 --icon assets/icon.png --width 1200 --height 800 --targets windows"
  },
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "d3js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "d3": "^7.9.0",
    "marked": "^11.1.1"
  },
  "devDependencies": {
    "live-server": "^1.2.2"
  }
}
